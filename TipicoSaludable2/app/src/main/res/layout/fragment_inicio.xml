<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanchez.tipicosaludable.Inicio">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/limte_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Limite_cal"
            android:textSize="26sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cal_per"
            android:id="@+id/cal_per"
            android:textSize="40sp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ultimoconsumo"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtnoconsumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridView
                    android:id="@+id/ultimoconsumo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </GridView>

            </ScrollView>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
