<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanchez.tipicosaludable.Deportes2"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="3sp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1sp"
            android:background="@drawable/text"
            android:gravity="center"

            >

            <TextView

                android:layout_width="270sp"
                android:layout_height="40sp"
                android:gravity="center"
                android:text="@string/titulo_ejercicios"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/Titulo"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_margin="6sp"
                android:layout_marginLeft="4sp"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="7sp"
            >

            <ImageButton
                android:id="@+id/brazo"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_margin="3sp"
                android:background="@drawable/deportes" />

            <ImageButton
                android:id="@+id/saltar"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:background="@drawable/deportes"
                android:layout_marginLeft="20sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/brazo"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="3sp"


                />

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/saltos"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12sp"
            >

            <ImageButton
                android:id="@+id/sentado"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_margin="3sp"
                android:background="@drawable/deportes"
                />

            <ImageButton
                android:id="@+id/titere"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:background="@drawable/deportes"
                android:layout_marginLeft="20sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/sentadillas"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="3sp"

                />

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/titere"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12sp"
            >

            <ImageButton
                android:id="@+id/abd"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_margin="3sp"
                android:background="@drawable/deportes"
                />

            <ImageButton
                android:id="@+id/burpes"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:background="@drawable/deportes"
                android:layout_marginLeft="20sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/abd"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="3sp"


                />

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/burpes"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12sp"
            >

            <ImageButton
                android:id="@+id/climber"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_margin="3sp"
                android:background="@drawable/deportes"
                />

            <ImageButton
                android:id="@+id/impulso"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:background="@drawable/deportes"
                android:layout_marginLeft="20sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/climber"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="3sp"

                />

            <TextView
                android:layout_width="130sp"
                android:layout_height="28sp"
                android:background="@drawable/deportes"
                android:text="@string/salto"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco"
            android:layout_marginTop="30sp"
            >

        </LinearLayout>

    </LinearLayout>


</ScrollView>