<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanchez.tipicosaludable.Actividad_Fisica">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3sp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1sp"
                android:background="@drawable/text"
                android:gravity="center"

                >

                <TextView

                    android:layout_width="270sp"
                    android:layout_height="40sp"
                    android:gravity="center"
                    android:text="@string/titulo_actividad_fisica"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/Titulo"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="6sp"
                    android:layout_marginLeft="4sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="7sp"
                >

                <ImageButton
                    android:id="@+id/marcha"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:layout_margin="3sp"
                    android:background="@drawable/deportes"
                    />

                <ImageButton
                    android:id="@+id/zumba"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:background="@drawable/deportes"
                    android:layout_marginLeft="20sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/marcha"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="3sp"


                    />

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/zumba"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12sp"
                >

                <ImageButton
                    android:id="@+id/pilates"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:layout_margin="3sp"
                    android:background="@drawable/deportes"
                    />

                <ImageButton
                    android:id="@+id/yoga"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/deportes"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/pilates"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="3sp"

                    />

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/yoga"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12sp"
                >

                <ImageButton
                    android:id="@+id/step"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:layout_margin="3sp"
                    android:background="@drawable/deportes"
                    />

                <ImageButton
                    android:id="@+id/caminar"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:background="@drawable/deportes"
                    android:layout_marginLeft="20sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/step"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="3sp"


                    />

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/caminar"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12sp"
                >

                <ImageButton
                    android:id="@+id/trotar"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:layout_margin="3sp"
                    android:background="@drawable/deportes"
                    />

                <ImageButton
                    android:id="@+id/aerobicos"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:background="@drawable/deportes"
                    android:layout_marginLeft="20sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/trote"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="3sp"

                    />

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/aerobicos"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12sp"
                >

                <ImageButton
                    android:id="@+id/spininng"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:layout_margin="3sp"
                    android:background="@drawable/deportes"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="130sp"
                    android:layout_height="28sp"
                    android:background="@drawable/deportes"
                    android:text="@string/spininng"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="3sp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:layout_marginTop="30sp"
                >

            </LinearLayout>



        </LinearLayout>




    </ScrollView>

</FrameLayout>
