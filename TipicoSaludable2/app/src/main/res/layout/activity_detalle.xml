            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/esquina_redonda"
                android:text="@string/infocalorias"
                android:textColor="@color/blanco"
                android:textSize="26sp" />




            <TextView
                android:id="@+id/informacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"


                android:textSize="20sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/carboinfo"
                android:textSize="26dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/esquina_redonda"
                android:textColor="@color/blanco"
                />
            <TextView
                android:id="@+id/informacioncarbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"

                android:textSize="20sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proteinfo"
                android:textSize="26dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/esquina_redonda"
                android:textColor="@color/blanco"
                />
            <TextView
                android:id="@+id/informacionprote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"

                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btnconsumodealimento"
                style="@android:style/Widget.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:text="@string/btnaÃ±adirplato"
                android:textSize="20sp"
                android:padding="5dp"/>




        </LinearLayout>






    </ScrollView>





</LinearLayout>
